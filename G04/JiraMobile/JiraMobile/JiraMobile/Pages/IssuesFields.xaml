<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="White" xmlns:local="clr-namespace:JiraMobile.Models;assembly=JiraMobile" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="JiraMobile.Pages.IssuesFields">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="5,20,5,5" Android="5,0,5,5" WinPhone="5,0,5,5" />
	</ContentPage.Padding>
	<ContentPage.Resources>
		<ResourceDictionary>
			<OnPlatform x:Key="rowHeight" x:TypeArguments="x:Int32" iOS="70" Android="55" WinPhone="55" />
		</ResourceDictionary>
	</ContentPage.Resources>
	<StackLayout Orientation="Vertical">
		<StackLayout HeightRequest="1" BackgroundColor="Gray">
		</StackLayout>
		<ActivityIndicator IsRunning="true" x:Name="processBar" />
		<ListView RowHeight="{StaticResource rowHeight}" x:Name="allFieldsList" IsVisible="false" ItemTapped="OnItemTapped" ItemsSource="{Binding .}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Orientation="Vertical">
							<StackLayout Orientation="Vertical">
								<Label TextColor="Gray" Text="{Binding Name}" Font="Small" />
								<Label Font="Medium" TextColor="Black" Text="{Binding Value}" />
							</StackLayout>
							<StackLayout HeightRequest="1" BackgroundColor="Gray">
							</StackLayout>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>