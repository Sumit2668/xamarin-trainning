<?xml version="1.0" encoding="utf-8"?>
<ContentPage BackgroundColor="White" xmlns="http://xamarin.com/schemas/2014/forms" Title="General" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="JiraMobile.Pages.IssueGeneral">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="5,20,5,5" Android="5,0,5,5" WinPhone="5,0,5,5" />
	</ContentPage.Padding>
	<StackLayout Orientation="Vertical" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="JiraMobile.Pages.IssueGeneral">
		<StackLayout HeightRequest="1" BackgroundColor="Gray"></StackLayout>
		<Label Text="{Binding fields.updated}" TextColor="Black" x:Name="lbLastedUpdate" />
		<Label Text="{Binding fields.summary}" TextColor="Black" Font="Bold,Medium" />
		<Label Text="{Binding fields.creator.displayName}" TextColor="Black" XAlign="End" HorizontalOptions="EndAndExpand" />
		<Label Text="{Binding fields.description}" TextColor="Black" />
		<Label />
	</StackLayout>
</ContentPage>
