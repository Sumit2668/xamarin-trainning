<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" Title="General" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="JiraMobile.Pages.IssueGeneral">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="5,20,5,5" Android="5,0,5,5" WinPhone="5,0,5,5" />
	</ContentPage.Padding>
	<StackLayout Orientation="Vertical" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="JiraMobile.Pages.IssueGeneral">
		<Label Text="{Binding fields.updated}" x:Name="lbLastedUpdate" />
		<Label Text="{Binding fields.summary}" Font="Bold,Medium" />
		<Label Text="{Binding fields.creator.displayName}" XAlign="End" HorizontalOptions="EndAndExpand" />
		<Label Text="{Binding fields.description}" />
		<Label />
	</StackLayout>
</ContentPage>
