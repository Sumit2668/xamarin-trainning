<?xml version="1.0" encoding="UTF-8"?>  
<ContentPage BackgroundColor="White" Title="Login Jira Mobile" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="JiraMobile.Login">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="5,20,5,5" Android="5,0,5,5" WinPhone="5,0,5,5" />
	</ContentPage.Padding>
		<StackLayout VerticalOptions="Center">
			<Image x:Name="imgLogo" Aspect="AspectFit" />
			<ActivityIndicator IsRunning="true" x:Name="processBar" />
			<Entry x:Name="txtUserName" Placeholder = "UserName" WidthRequest="5" />
			<Entry x:Name="txtPass" Placeholder="Password" WidthRequest="5" IsPassword="true" />
			<StackLayout Orientation="Horizontal" VerticalOptions="Center">
				<Label Text="Remember me?" Font="Large" TextColor="Gray" XAlign="End" HorizontalOptions="EndAndExpand" />
				<Switch x:Name="remember" IsToggled="true"  />
			</StackLayout>
			<Button BackgroundColor="#003366" x:Name="btnLogin" Text="Login" Clicked="btnLogin_OnClick" />
  		</StackLayout>
</ContentPage>